{
    "compilerOptions": {
        "target": "ES2017",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": [
            "ES2017",
            "DOM"
        ],
        "jsx": "react",
        "declaration": true,
        "declarationDir": "dist/types",
        "emitDeclarationOnly": false,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}